<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>

    <div class="box" id = "heading">
      <h1> <%= TodayOf %> </h1>
    </div>

    <div class="box">


        <% next.forEach(function(item){%>
          <form action="/delete" method="post">
          <div class="item" >
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()" >
            <p><%= item.name %></p>
          </div>
          <input type="hidden" name="hiddenInput" value="<%=TodayOf%>"></input>
          </form>
             <%})%>




        <form class="item" action="/" method="post">
          <input type="text" name="newItems" placeholder = "New Item" autocomplete="off">
          <button type="submit" name="button" value="<%=TodayOf%>"> + </button>
        </form>

    </div>

  </body>
</html>
